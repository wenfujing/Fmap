<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/user_detail_header_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_car"
        style="@style/SmallTextTheme.BaseTextTheme"
        android:layout_marginBottom="60dp"
        android:layout_height="34dp"
        android:paddingLeft="4dp"
        android:paddingRight="@dimen/padding_size"
        android:background="@drawable/user_detail_add_car_bg"
        android:drawableLeft="@drawable/user_detail_add_car"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="添加爱车"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>